<% if flash[:notice] %>
  <div class="alert alert-info">
    <a class="close" data-dismiss="alert">×</a>
    <%= content_tag :div, flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert">×</a>
    <%= content_tag :div, flash[:alert] %>
  </div>
<% end %>
